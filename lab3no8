#include <stdio.h>
int main(){
	int h,m,s,new;
	scanf("%d:%d:%d",&h,&m,&s);
	printf("hour: %d\nminute: %d\nsecond: %d\n",h,m,s);
    printf("Next minutes: ");
    scanf("%d",&new);

    //logic
    if (((m + new) / 60) < 1){
        m = (m + new);
    }else{
        h = h + (((m + new) / 60));
        h = h % 24;
        m = (m + new) % 60;
    }
    
    printf("hour: %d\nminute: %d\nsecond: %d\n",h,m,s);
	return 0;
}
